extends ../layout

block content
    form(method="post", action="/basicdata/plant")
        div
            label 编码
            input(type="text", name="serial")
        div
            label 中文名
            input(type="text", name="name")
        div
            label 加盟商类型
            select(name="type")
                option(value="0") 三方
                option(value="1") 专线
        div
            label 所属子公司
            select(name="company")
                each company in companys
                    option(value=company._id) #{company.name}
        div
            label 出险次数
            input(type="text", name="claim")
        div
            label 运单数量
            input(type="text", name="orderNum")
        button(type="submit") 提交
