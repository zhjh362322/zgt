doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/libs/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet', href='/stylesheets/layout.css')
        block css
        script(src="/libs/jquery/dist/jquery.min.js")
    body
        .wrapper
            header.top-nav
                .brand 正广通
                .header
                    button(type="button")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                .userinfo
                    a
                        image(src="/images/avatar1.png")
                        //span #{user.name}
                    ul.userinfodrop
                        //li #{user.uid}
                        //li #{user.email}
                        li
                            a(href="/users/logout") 登出
            aside.sidebar-menu
                ul
                    li.basic(class=pid == 1 ? 'active' : '')
                        .menu-block
                        .menu-icon
                            icon.glyphicon.glyphicon-book
                        .menu-text
                            a 基础资料
                        ul.menu-list
                            li(class=subid == 11 ? 'active' : '')
                                a(href="/basic/user") 用户列表
                            li(class=subid == 12 ? 'active' : '')
                                a(href="/basic/company") 子公司
                            li(class=subid == 13 ? 'active' : '')
                                a(href="/basic/plant") 加盟商
                            li(class=subid == 14 ? 'active' : '')
                                a(href="/basic/shipper") 客户
                            li(class=subid == 15 ? 'active' : '')
                                a(href="/basic/quotation") 线路报价
                    li.order(class=pid == 2 ? 'active' : '')
                        .menu-block
                        .menu-icon
                            icon.glyphicon.glyphicon-th-list
                        .menu-text
                            a(href="/consignment") 运单列表
                    li
                        .menu-block
                        .menu-icon
                            icon.glyphicon.glyphicon-book
                        .menu-text
                            a(href="/users/logout") 登出
            .main-container
                //ol.breadcrumb
                //    each item in breadcrumb
                //        li= item
                block content
        script(src="/libs/bootstrap/dist/js/bootstrap.min.js")
        script(src="/libs/jquery/dist/jquery.validate.min.js")
        script(src="/javascripts/layout.js")